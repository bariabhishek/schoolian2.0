<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".JobConfirm">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JOB TITLE"
        android:layout_gravity="center"
        android:textColor="#000"
        android:textSize="17sp"
        android:layout_margin="10dp"
        android:id="@+id/jobTitleConfirm"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="18sp"
        android:id="@+id/yourChoosingLine"
        android:gravity="center"
        android:layout_margin="10dp"
        android:text="You are choosing this person to be complete your task. Please confirm and contact with this person.
Make sure that you share receive OTP with this person."
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="30dp"
            android:src="@drawable/sch"
            android:id="@+id/jobGiverConfirm"
            app:civ_border_width="1dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:id="@+id/jobGiverNameConfirm"
                android:layout_marginHorizontal="30dp"
                android:text="JOB GIVER"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:id="@+id/jobSeekerConfirm"
            android:layout_height="100dp"
            android:layout_marginHorizontal="30dp"
            android:src="@drawable/sch"
            app:civ_border_width="1dp"/>
            <TextView
                android:id="@+id/jobSeekerNameConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginHorizontal="30dp"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:text="JOB SEEKER"/>
    </LinearLayout>



    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_capsule_for_message"
        android:text="CONFIRM"
        android:id="@+id/confirm"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"/>

</LinearLayout>