<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Results">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            app:titleTextColor="#fff"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:id="@+id/toolbarLayout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/back"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/back"/>
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/colorPrimary"
        android:backgroundTintMode="src_atop"
        android:id="@+id/progressBarRes"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@id/appbar"
        android:background="@drawable/background_select_exam"
        android:id="@+id/selector"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/_14sdp"
            android:layout_weight=".5"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:text="Select Exam"
            android:background="@color/colorPrimary"/>
        <Spinner
            android:id="@+id/spinnerClass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            />

    </LinearLayout>

    <ScrollView
        android:layout_below="@id/selector"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:paddingHorizontal="@dimen/_5sdp"
        android:weightSum="3"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/Subject"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"
            android:textSize="16sp"
            android:background="@drawable/examgrade_background_layout"
            android:text="Subject"/>
        <TextView
            android:id="@+id/marks"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:background="@drawable/examgrade_background_layout"
            android:gravity="center"
            android:padding="2dp"
            android:text="Marks"/>
        <TextView
            android:id="@+id/grads"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"
            android:background="@drawable/examgrade_background_layout"
            android:text="Grads"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/ll"
        android:visibility="gone"
        android:id="@+id/recyclerViewAttendance"
        android:layout_width="match_parent"
        android:paddingHorizontal="@dimen/_5sdp"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>

<LinearLayout
    android:id="@+id/marksDetail"
    android:visibility="gone"
    android:layout_below="@id/recyclerViewAttendance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:weightSum="3"
    >

    <LinearLayout
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:background="@drawable/schoolian_background_round_red"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/totalMarks"
        android:textColor="@color/colorWhite"
        android:layout_marginVertical="@dimen/_5sdp"
        android:textStyle="bold"
      />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:background="@color/colorWhite"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_marginVertical="@dimen/_5sdp"
            android:textStyle="bold"
            android:id="@+id/obtainMarks"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:background="@drawable/schoolian_background_round_red"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:layout_marginVertical="@dimen/_5sdp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Percentage"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:background="@color/colorWhite"/>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:id="@+id/percentage"
            android:textColor="@color/colorWhite"
            android:layout_marginVertical="@dimen/_5sdp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:background="@drawable/schoolian_background_round_red"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:layout_marginVertical="@dimen/_5sdp"
            android:textStyle="bold"
            android:id="@+id/passFail"
            android:text="Pass"/>

    </LinearLayout>

   </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>