<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/postText"
        android:layout_width="340dp"
        android:layout_height="106dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:hint="@string/write_your_query_here"
        android:maxLength="250"
        android:elevation="5dp"
        android:background="@drawable/background_rounded"
        android:textColor="#000"
        android:textColorHint="#3E000000"
        android:inputType="text" />

    <ImageView
        android:id="@+id/postImage2"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_below="@+id/postText"
        android:layout_marginTop="50dp"

        android:layout_marginBottom="30dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/postImage2"
       android:gravity="center"
        android:orientation="horizontal"
       >


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:background="#fff"
            android:visibility="gone"
            app:srcCompat="@android:drawable/ic_delete" />

        <Button
            android:id="@+id/postUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:background="@drawable/bg_capsule_for_message"
            android:text="Post" />


        <Button
            android:id="@+id/choosIm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:background="@drawable/bg_capsule_for_message"
            android:text="Image" />
    </LinearLayout>

</RelativeLayout>
